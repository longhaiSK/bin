user=${1%@*}
echo user: $user
server=${1#*@}
echo server: $server
localdir=~/home\@$server
echo local directory: $localdir

if [ !  -d $localdir ] 
then mkdir $localdir
fi

echo Umounting $localdir first
umount $localdir

echo Umounting is done. Now mounting $1 with this command:
echo sshfs $1:/home/ $localdir -o allow_root -o volname=home\@$server -o reconnect


sshfs $1:/home/  $localdir -o allow_root -o volname=home\@$server -o reconnect

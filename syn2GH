#!/bin/zsh

# Turn nounset on only after we set sane defaults
set -e -o pipefail

# PATH bootstrap (robust)
for d in /opt/homebrew/bin /usr/local/bin; do
  [[ -d $d ]] && PATH="$d:$PATH"
done
if command -v brew >/dev/null 2>&1; then
  BREW_PREFIX="$(brew --prefix 2>/dev/null || true)"
  if [[ -n "$BREW_PREFIX" && -d "$BREW_PREFIX/bin" ]]; then
    PATH="$BREW_PREFIX/bin:$PATH"
  fi
fi
export PATH

# Provide defaults
: "${REPO_DIR:=/Users/lol553/Github}"
: "${REMOTE:=origin}"
: "${BRANCH:=main}"
: "${GIT_SSH_COMMAND:=ssh}"

# Now enable nounset
set -u

# ---- Customize these search roots ----
declare -a ROOTS=("${githubroot:-$HOME/Github}")

# Exclude heavy/noisy directories
EXCLUDE_REGEX='(/\.venv/|/node_modules/|/\.cargo/)'
# -------------------------------------

# ---- Colors ----
C_BLUE=$'\033[0;34m'
C_GREEN=$'\033[32m'
C_YELLOW=$'\033[0;33m'
C_RED=$'\033[0;31m'
C_CYAN=$'\033[0;36m'
C_NONE=$'\033[0m'

# ---- Commit message ----
if [ -n "${1:-}" ]; then
  COMMIT_MSG="$1"
else
  COMMIT_MSG="syn2GH from $(hostname)"
fi

# ---- Run header (HIGHLIGHTED RED) ----
START_TS="$(TZ='America/Regina' date '+%Y-%m-%d %H:%M:%S %Z')"
echo -e "${C_RED}syn2GH start:${C_NONE} ${C_YELLOW}${START_TS}${C_NONE} on ${C_GREEN}$(hostname)${C_NONE}"

errors=()

process_repo() {
  local repo_dir="$1"
  
  # Go into directory silently first
  cd "$repo_dir" || return

  # Validation checks
  if ! git rev-parse --git-dir >/dev/null 2>&1; then return; fi
  BRANCH_NAME=$(git symbolic-ref --quiet --short HEAD 2>/dev/null)
  if [ -z "$BRANCH_NAME" ]; then return; fi
  if ! git remote get-url origin >/dev/null 2>&1; then return; fi

  # Upstream tracking setup
  TRACKING_REF=$(git rev-parse --abbrev-ref --symbolic-full-name @{u} 2>/dev/null || true)
  if [ -z "$TRACKING_REF" ]; then
    DEFAULT_REMOTE_BRANCH=$(git remote show origin 2>/dev/null | awk '/HEAD branch/ {print $NF}')
    if [ -n "$DEFAULT_REMOTE_BRANCH" ]; then
      if git branch --set-upstream-to="origin/${DEFAULT_REMOTE_BRANCH}" "$BRANCH_NAME" >/dev/null 2>&1; then
        TRACKING_REF="origin/${DEFAULT_REMOTE_BRANCH}"
      fi
    fi
  fi

  # ---------------------------------------------------------
  # CHECK STATUS: Speed check
  # ---------------------------------------------------------
  local needs_action=0

  # 1. Check for local dirty state
  if [ -n "$(git status --porcelain)" ]; then
    needs_action=1
  else
    # 2. Check remote status (Fetch quietly)
    git fetch origin "$BRANCH_NAME" --quiet >/dev/null 2>&1 || true

    if [ -n "$TRACKING_REF" ]; then
      local counts
      counts=$(git rev-list --left-right --count HEAD...@{u} 2>/dev/null || echo "0 0")
      local ahead=$(echo "$counts" | awk '{print $1}')
      local behind=$(echo "$counts" | awk '{print $2}')

      if [ "$ahead" -ne 0 ] || [ "$behind" -ne 0 ]; then
        needs_action=1
      fi
    else
      needs_action=1
    fi
  fi

  # If nothing to do, return immediately (Speed optimization)
  if [ "$needs_action" -eq 0 ]; then
    return
  fi

  # ---------------------------------------------------------
  # ACTION
  # ---------------------------------------------------------

  # Print Separator and Repo Name
  echo -e "\n${C_CYAN}-------------------------------------------------------${C_NONE}"
  echo -e "${C_BLUE}Repo: ${C_YELLOW}${repo_dir}${C_NONE}"

  # 1) Pull
  OLD_HEAD=$(git rev-parse HEAD 2>/dev/null)
  if [ -n "$TRACKING_REF" ]; then
    if ! git pull --rebase --autostash origin "$BRANCH_NAME" >/dev/null 2>&1; then
      echo -e "${C_RED}  ! Pull failed. Resolve conflicts manually.${C_NONE}"
      errors+=("$repo_dir: pull failed")
      return
    fi
  fi
  NEW_HEAD=$(git rev-parse HEAD 2>/dev/null)
  
  if [ "$OLD_HEAD" != "$NEW_HEAD" ]; then
    echo -e "${C_BLUE}1) Pull:${C_GREEN} ↓ Changes pulled:${C_NONE}"
    git log --pretty=format:"      %C(yellow)%h%C(reset) - %s %C(cyan)(%an, %ar)%C(reset)" "$OLD_HEAD".."$NEW_HEAD"
    echo ""
    # Show file stats for the pull
    git diff --stat "$OLD_HEAD".."$NEW_HEAD" | sed "s/.*/      &/"
  else
    echo -e "${C_BLUE}1) Pull:${C_GREEN} ✓ Up-to-date.${C_NONE}"
  fi

  # 2) Stage
  git add -A
  if ! git diff --staged --quiet; then
    echo -e "${C_BLUE}2) Stage:${C_GREEN} Changes staged.${C_NONE}"
  else
    echo -e "${C_BLUE}2) Stage:${C_GREEN} ✓ Nothing to stage.${C_NONE}"
  fi

  # 3) Commit
  if ! git diff --staged --quiet; then
    if git commit -m "$COMMIT_MSG" >/dev/null; then
      echo -e "${C_BLUE}3) Commit:${C_GREEN} ✓ Committed:${C_NONE}"
      # Show the commit stat in Red as requested
      git show --stat --oneline --no-color HEAD | sed "1d" | sed "s/^/      ${C_RED}/" | sed "s/$/${C_NONE}/"
    else
      echo -e "${C_BLUE}3) Commit:${C_RED} ! Failed.${C_NONE}"
      errors+=("$repo_dir: commit failed")
      return
    fi
  else
    echo -e "${C_BLUE}3) Commit:${C_GREEN} ✓ Nothing to commit.${C_NONE}"
  fi

  # 4) Push
  if [ -n "$TRACKING_REF" ]; then
    TO_PUSH=$(git log --pretty=format:"%h" "${TRACKING_REF}"..HEAD 2>/dev/null)
  else
    TO_PUSH=$(git log --pretty=format:"%h" "origin/$BRANCH_NAME"..HEAD 2>/dev/null)
  fi

  if [ -n "$TO_PUSH" ]; then
    if git push origin "$BRANCH_NAME" >/dev/null 2>&1; then
      echo -e "${C_BLUE}4) Push:${C_GREEN} ✓ Pushed successfully.${C_NONE}"
    else
      echo -e "${C_BLUE}4) Push:${C_RED} ↑ Push FAILED.${C_NONE}"
      errors+=("$repo_dir: push failed")
      return
    fi
  else
    echo -e "${C_BLUE}4) Push:${C_GREEN} ✓ Already pushed.${C_NONE}"
  fi
}

# ---- Build and SORT repo list ----
raw_git_dirs=()

for root in "${ROOTS[@]}"; do
  [ -d "$root" ] || continue
  # Find all git directories
  tmp_file="$(mktemp)"
  find "$root" -type d -name .git -prune -print 2>/dev/null | sed 's/\/\.git$//' | grep -vE "${EXCLUDE_REGEX}" > "$tmp_file"
  
  while IFS= read -r line; do
    raw_git_dirs+=( "$line" )
  done < "$tmp_file"
  rm -f "$tmp_file"
done

if [ ${#raw_git_dirs[@]} -eq 0 ]; then
  echo -e "${C_YELLOW}No git repositories found.${C_NONE}"
  exit 0
fi

# Zsh specific: Sort the array alphabetically (case-insensitive)
# (oi) flag: o = order, i = case-insensitive
sorted_git_dirs=("${(@oi)raw_git_dirs}")

# ---- Process each repo ----
for repo in "${sorted_git_dirs[@]}"; do
  process_repo "$repo"
done